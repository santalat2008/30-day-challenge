mod=10**9+7
n,k,d=map(int,input().split())

dp=[0]*(n+1)
dp[0]=1
for i in range(1,n+1):
    for j in range(1,k+1):
        if i-j>=0:
            dp[i]=(dp[i]+dp[i-j])%mod

dp2=[0]*(n+1)
dp2[0]=1
for i in range(1,n+1):
    for j in range(1,d):
        if i-j>=0:
            dp2[i]=(dp2[i]+dp2[i-j])%mod

print((dp[n]-dp2[n])%mod)
