import math

n=int(input())
def lcm(a,b): return a//math.gcd(a,b)*b
def lcm3(a,b,c): return lcm(lcm(a,b),c)

if n<=2:
    print(n)
elif n==3:
    print(6)
else:
    ans=0
    for i in range(n, n-50, -1):
        for j in range(n, n-50, -1):
            for k in range(n, n-50, -1):
                if i>0 and j>0 and k>0:
                    ans=max(ans,lcm3(i,j,k))
    print(ans)
