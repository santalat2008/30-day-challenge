for _ in range(int(input())):
    n, k = map(int, input().split())
    h = list(map(int, input().split()))
    i = 0
    while k:
        for i in range(n - 1):
            if h[i] < h[i + 1]:
                h[i] += 1
                k -= 1
                break
        else:
            i = -2
            break
    print(i + 1 if i != -2 else -1)
