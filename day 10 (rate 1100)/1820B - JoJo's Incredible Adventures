t = int(input())
for _ in range(t):
    s = input()
    n = len(s)
    s += s
    c = m = 0
    for x in s:
        if x == '1':
            c += 1
            m = max(m, c)
        else:
            c = 0
    if m == 0:
        print(0)
    elif m >= n:
        print(n * (m - n + 1))
    else:
        k = (m + 1) // 2
        print(k * (m // 2))
