t = int(input())
for _ in range(t):
    n, k = map(int, input().split())
    a = set(map(int, input().split()))
    m = max(a)
    i = 0
    while i in a:
        i += 1
    if k == 0:
        print(len(a))
    elif i > m:
        print(len(a) + k)
    else:
        x = (i + m + 1) // 2
        a.add(x)
        print(len(a))
