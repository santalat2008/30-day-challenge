import sys

def main():
    input = sys.stdin.readline
    n = int(input())
    a = [int(input()) for _ in range(n)]
    a.sort()
    ans = n
    j = n // 2
    for i in range(n // 2):
        while j < n and a[j] < 2 * a[i]:
            j += 1
        if j < n:
            ans -= 1
            j += 1
    print(ans)

if __name__ == "__main__":
    main()
