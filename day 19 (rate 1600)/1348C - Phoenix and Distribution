import sys
input=sys.stdin.readline

t=int(input())
for _ in range(t):
    n,k=map(int,input().split())
    s=sorted(input().strip())
    if s[k-1]!=s[0]:
        print(s[k-1])
    elif s[k]!=s[-1]:
        print(s[0]+''.join(s[k:]))
    else:
        ans=s[0]
        m=(n-k+(k-1))//k
        ans+=s[k-1]*m
        print(ans)
