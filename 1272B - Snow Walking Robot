q = int(input())
for _ in range(q):
    s = input().strip()
    l = s.count('L')
    r = s.count('R')
    u = s.count('U')
    d = s.count('D')
    x = min(l, r)
    y = min(u, d)
    if x == 0 and y == 0:
        print(0)
        print()
    elif x == 0:
        print(2)
        print("UD")
    elif y == 0:
        print(2)
        print("LR")
    else:
        print(2 * (x + y))
        print("L" * x + "U" * y + "R" * x + "D" * y)
