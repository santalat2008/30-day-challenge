import sys
input=sys.stdin.readline

t=int(input())
for _ in range(t):
    n=int(input())
    if n==3:
        print("2 1 3")
    elif n==4:
        print("2 1 3 0")
    elif n%2==0:
        res=list(range(1,n+1))
        print(*res)
    else:
        res=list(range(1,n-2))
        res+=[n-2,(1<<17),(1<<18)]
        print(*res)
