def main():
    n = int(input())
    s = input()

    res = []
    if n % 2 == 0:
        for i in range(n - 2, -1, -2):
            res.append(s[i])
        for i in range(1, n, 2):
            res.append(s[i])
    else:
        for i in range(n - 2, 0, -2):
            res.append(s[i])
        for i in range(0, n, 2):
            res.append(s[i])

    print(''.join(res))

if __name__ == "__main__":
    main()
