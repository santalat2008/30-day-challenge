t = int(input())
for _ in range(t):
    n = int(input())
    a = list(map(int, input().split()))
    b = list(map(int, input().split()))
    sa = sum(a)
    sb = sum(b)
    if sa == sb and a.count(1) == b.count(1):
        print(0)
    else:
        d = abs(sa - sb)
        print(1 if a.count(1) != b.count(1) else abs(sa - sb))
