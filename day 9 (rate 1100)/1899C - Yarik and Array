t = int(input())
for _ in range(t):
    n = int(input())
    a = list(map(int, input().split()))
    mx = a[0]
    for i in range(1, n):
        if abs(a[i] % 2) != abs(a[i - 1] % 2):
            a[i] += a[i - 1]
        else:
            a[i] = max(a[i], 0)
        mx = max(mx, a[i])
    print(mx)
