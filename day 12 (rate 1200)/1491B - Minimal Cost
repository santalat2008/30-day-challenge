t = int(input())
for _ in range(t):
    n, u, v = map(int, input().split())
    a = list(map(int, input().split()))
    diff1 = diff2 = False
    for i in range(1, n):
        if abs(a[i] - a[i-1]) >= 2:
            diff2 = True
            break
        elif abs(a[i] - a[i-1]) == 1:
            diff1 = True
    if diff2:
        print(0)
    elif diff1:
        print(min(u, v))
    else:
        print(min(u + v, 2 * v))
