t = int(input())
for _ in range(t):
    n, k = map(int, input().split())
    a = list(map(int, input().split()))

    cnt = 0
    cur = 0
    for i in range(1, n):
        if a[i - 1] < 2 * a[i]:
            cur += 1
        else:
            cur = 0
        if cur >= k:
            cnt += 1
    print(cnt)
