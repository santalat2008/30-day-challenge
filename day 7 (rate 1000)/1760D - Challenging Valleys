t = int(input())
for _ in range(t):
    n = int(input())
    a = list(map(int, input().split()))
    b = [a[0]]
    for i in range(1, n):
        if a[i] != a[i - 1]:
            b.append(a[i])
    cnt = 0
    for i in range(len(b)):
        if (i == 0 or b[i - 1] > b[i]) and (i == len(b) - 1 or b[i] < b[i + 1]):
            cnt += 1

    print("YES" if cnt == 1 else "NO")
