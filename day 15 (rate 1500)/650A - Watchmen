from collections import Counter
n=int(input())
p=[tuple(map(int,input().split())) for _ in range(n)]
cx=Counter()
cy=Counter()
cxy=Counter()
for x,y in p:
    cx[x]+=1
    cy[y]+=1
    cxy[(x,y)]+=1
ans=0
for v in cx.values():
    ans+=v*(v-1)//2
for v in cy.values():
    ans+=v*(v-1)//2
for v in cxy.values():
    ans-=v*(v-1)//2
print(ans)
